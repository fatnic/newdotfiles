URxvt*termName:rxvt-unicode-256color

Xft.antialias:  true
Xft.autohint:   false
Xft.hinting:    true
Xft.hintstyle:  hintslight
Xft.lcdfilter:  lcdlight
Xft.rgba:       rgb
Xft.dpi:        96

!Fonts
URxvt.font: xft:Monaco:size=8,xft:Monospace:size=8,xft:Terminess Powerline:size=12

URxvt.boldFont: xft:Monaco:style=Bold:size=8
URxvt.letterSpace: -1

URxvt*transparent: true
URxvt*.shading:5

!Say no to scrollbars
URxvt*scrollBar:false

!URxvt*cursorUnderline: true

URxvt.imLocale:en_GB.UTF8

! URxvt*skipBuiltinGlyphs: false

! Amount that I can scroll up
URxvt.saveLines: 12000

! Underline URLs
URxvt.underlineURLs:true

URxvt.iso14755_52:false
URxvt.iso14755:false

! Add color to my man pages:
URxvt.colorIT: #87af5f
URxvt.colorBD: #d7dfdf
!URxvt.colorUL:

URxvt.perl-ext-common: default,matcher,clipboard,url-select,keyboard-select
URxvt.url-launcher:  qutebrowser
URxvt.matcher.button: 1
URxvt.url-select.underline: true

URxvt.keysym.M-u:           perl:url-select:select_next
URxvt.keysym.M-Escape:      perl:keyboard-select:activate
URxvt.keysym.M-s:           perl:keyboard-select:search

URxvt*scrollWithBuffer: true
URxvt*scrollTtyKeypress: true

URxvt*visualBell:  true

URxvt.geometry: 150x40

